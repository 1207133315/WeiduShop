<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_57"
        android:layout_weight="1"></android.support.v4.view.ViewPager>
    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@mipmap/bottom"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/sy"
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_27"
            android:layout_marginLeft="@dimen/dp_33"
            android:layout_marginTop="@dimen/dp_26"
            android:background="@drawable/shouye"
            android:button="@null" />

        <RadioButton
            android:id="@+id/qz"
            android:layout_width="@dimen/dp_33"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_26"
            android:background="@drawable/quanzi"
            android:button="@null"

            />

        <RadioButton
            android:id="@+id/gwc"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_56"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@drawable/tab_gwc"
            android:button="@null" />

        <RadioButton
            android:id="@+id/zd"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_26"
            android:background="@drawable/zhangdan"
            android:button="@null" />

        <RadioButton
            android:id="@+id/wd"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_33"
            android:layout_marginTop="@dimen/dp_26"
            android:background="@drawable/wode"
            android:button="@null" />
    </RadioGroup>


</RelativeLayout>
