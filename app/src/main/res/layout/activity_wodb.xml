<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_145"
        android:background="@drawable/shape4"
        android:layout_height="@dimen/dp_30">

    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_160"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:background="@mipmap/wdqb"

        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="#343434"
            android:layout_marginTop="@dimen/dp_28"
            android:text="余额"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:includeFontPadding="false"
            android:text="99999"
            android:textColor="#343434"
            android:textSize="@dimen/sp_64" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_175"
        android:background="#fff"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="539"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_14"
            android:text="消费金额"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_20"
            android:text="|"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="539"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="消费金额"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/userwalletrecy"
        android:layout_marginTop="@dimen/dp_215"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</RelativeLayout>