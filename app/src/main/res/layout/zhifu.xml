<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:alpha="0.8"
    android:background="#4f4f4f"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="@dimen/dp_100"
        android:id="@+id/img_zhifu"
        android:src="@mipmap/zfsuccess"
        android:layout_marginTop="@dimen/dp_152"
        android:layout_centerHorizontal="true"
        android:layout_height="@dimen/dp_100" />
    <TextView
        android:id="@+id/tet"
        android:text="支付成功"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_zhifu"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:textSize="@dimen/sp_20"/>
    <Button
        android:id="@+id/fhzy"
        android:layout_below="@+id/tet"
        android:layout_marginTop="@dimen/dp_60"
        android:text="返回主页"
        android:textColor="#fff"
        android:textSize="@dimen/sp_14"
        android:background="@drawable/buttonshouhuo"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_108"
        android:layout_height="@dimen/dp_40" />
    <Button
        android:id="@+id/ckdd"
        android:layout_below="@+id/fhzy"
        android:layout_marginTop="@dimen/dp_20"
        android:text="查看订单"
        android:textColor="#ff5e71"
        android:textSize="@dimen/sp_14"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ckdd"
        android:layout_width="@dimen/dp_108"
        android:layout_height="@dimen/dp_40" />
</RelativeLayout>
