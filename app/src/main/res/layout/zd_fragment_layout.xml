<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <RadioGroup
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_102"

            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <RadioButton
                    android:id="@+id/alldingdan"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@mipmap/common_icon_alllist"
                    android:button="@null"/>
                <TextView
                    android:text="全部订单"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <RadioButton
                    android:id="@+id/daifukuan"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@mipmap/common_icon_receive"
                    android:button="@null"/>
                <TextView
                    android:text="待付款"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <RadioButton
                    android:id="@+id/daishouhuo"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@mipmap/common_icon_pay"
                    android:button="@null"/>
                <TextView
                    android:text="待收货"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <RadioButton
                    android:id="@+id/daipingjia"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@mipmap/commom_icon_comment"
                    android:button="@null"/>
                <TextView
                    android:text="待评价"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <RadioButton
                    android:id="@+id/yiwancheng"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@mipmap/common_icon_finish"
                    android:button="@null"/>
                <TextView
                    android:text="已完成"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </RadioGroup>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyler_dingdan"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</LinearLayout>
