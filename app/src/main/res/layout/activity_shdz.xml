<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ShdzActivity">
    <TextView
        android:id="@+id/shouhuotitle"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:text="我的收货地址"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/sp_16"
        android:textColor="#666666"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/finish"
        android:text="完成"
        android:layout_marginRight="@dimen/dp_24"
        android:textSize="@dimen/sp_12"
        android:textColor="#666666"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/shdirecy"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_76"
        android:layout_height="@dimen/dp_410"></android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/newadd"
        android:layout_width="@dimen/dp_116"
        android:layout_height="@dimen/dp_30"
        android:layout_alignStart="@+id/shouhuotitle"
        android:textColor="#fff"
        android:background="@drawable/buttonshouhuo"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_30"

        android:text="新增收货地址" />
</RelativeLayout>