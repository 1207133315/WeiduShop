<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DingdanActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    android:orientation="vertical"
    android:background="@drawable/lay_yy"
    android:layout_marginHorizontal="@dimen/dp_24"
    android:gravity="center"
    android:layout_marginTop="@dimen/dp_40"
    android:visibility="gone"
    android:id="@+id/no"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无收货地址,请添加"
        android:textSize="@dimen/sp_12"
        android:textColor="#ff5f71"
        android:id="@+id/add"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/lay_yy"
        android:layout_marginHorizontal="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_40"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_18"
        android:paddingHorizontal="@dimen/dp_20"
        android:id="@+id/yes"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李宁康"
            android:textSize="@dimen/sp_12"
            android:id="@+id/name"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="111111111111111"
                android:textSize="@dimen/sp_12"
                android:id="@+id/phone"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_12"
            android:text="12356677815215522"
            android:id="@+id/address"
            />
        <ImageView
            android:layout_width="12dp"
            android:layout_height="@dimen/dp_11"
            android:src="@drawable/ic_launcher_background"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginHorizontal="@dimen/dp_21"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_20"
        android:background="@drawable/lay_xx"
        ></android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
           
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共"
                android:textSize="14sp"
                android:textColor="#666666"
               
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="14sp"
                android:id="@+id/count"
                android:textColor="#ff0000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="件商品,"
                android:textSize="14sp"
                android:textColor="#666666"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="需支付"
                android:textSize="14sp"
                android:textColor="#666666"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="14sp"
                android:id="@+id/price"
                android:textColor="#ff0000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textSize="14sp"
                android:textColor="#666666"
                />
            </LinearLayout>
            <TextView
                android:layout_width="@dimen/dp_118"
                android:layout_height="match_parent"
                android:text="生成订单"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:id="@+id/dingdan"
                android:textColor="#ffffff"
                android:background="#ff5e70"
                />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
